@model MedControl.ViewModels.TransacaoViewModel

@{
    ViewData["Title"] = "Editar Transação";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Editar" method="post">

        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="IdEstoque" class="control-label"></label>
            <input asp-for="IdEstoque" class="form-control" />
            <span asp-validation-for="IdEstoque" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdFuncionario" class="control-label"></label>
            <input asp-for="IdFuncionario" class="form-control" />
            <span asp-validation-for="IdFuncionario" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantidade" class="control-label"></label>
            <input asp-for="Quantidade" class="form-control" />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataTransacao" class="control-label"></label>
            <input asp-for="DataTransacao" class="form-control" />
            <span asp-validation-for="DataTransacao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Salvar</button>
            <a asp-action="Index" class="btn btn-primary">Cancelar</a>
        </div>
    </form>
</div>
