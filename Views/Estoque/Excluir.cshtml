@model MedControl.ViewModels.EstoqueViewModel

<div class="container mt-4">
    <h2>Excluir Estoque</h2>

    <dl class="row">
        <dt class="col-sm-2">Quantidade Disponível</dt>
        <dd class="col-sm-10">@Model.QuantidadeDisponivel</dd>

        <dt class="col-sm-2">ID do Medicamento</dt>
        <dd class="col-sm-10">@Model.IdMedicamento</dd>
    </dl>

    <p>Tem certeza de que deseja excluir este Estoque?</p>

    <form asp-action="ExcluirConfirmado" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <button type="submit" class="btn btn-danger">Sim, Excluir</button>
            <a asp-action="Index" class="btn btn-primary">Não, Cancelar</a>
        </div>
    </form>
</div>
