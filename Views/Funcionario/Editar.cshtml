@model MedControl.Models.Funcionario

@{
    ViewData["Title"] = "Editar Funcionário";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Editar" method="post">
        <div class="form-group">
            <label asp-for="Nome" class="control-label">Nome</label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Cargo" class="control-label">Cargo</label>
            <input asp-for="Cargo" class="form-control" />
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-success">Salvar</button>
            <a asp-action="Index" class="btn btn-primary">Cancelar</a>
        </div>
    </form>
</div>
