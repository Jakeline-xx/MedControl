@model MedControl.ViewModels.FuncionarioViewModel

<div class="container mt-4">
    @if (ViewBag.Mensagem != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Mensagem
        </div>
    }
    <h2>Excluir Funcionário</h2>

    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Cargo</dt>
        <dd class="col-sm-10">@Model.Cargo</dd>

        <dt class="col-sm-2">Identificação</dt>
        <dd class="col-sm-10">@Model.Identificacao</dd>

        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>
    </dl>

    <p>Tem certeza de que deseja excluir este funcionário?</p>

    <form asp-action="ExcluirConfirmado" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Sim, Excluir</button>
            <a asp-action="Index" class="btn btn-primary">Não, Cancelar</a>
        </div>
    </form>
</div>
