@model MedControl.Models.Funcionario

@{
    ViewData["Title"] = "Detalhes do Funcionário";
}

<div class="container mt-4">
    <h2>Detalhes do Funcionário</h2>

    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Cargo</dt>
        <dd class="col-sm-10">@Model.Cargo</dd>
    </dl>

    <p>
        <a asp-action="Index" class="btn btn-primary">Voltar para a Lista</a>
    </p>
</div>
