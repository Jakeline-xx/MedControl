@model SeuNamespace.Models.Departamento

<div class="container mt-4">
    <h2>Excluir Departamento</h2>

    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>
    </dl>

    <p>Tem certeza de que deseja excluir este departamento?</p>

    <form asp-action="ExcluirConfirmado" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <button type="submit" class="btn btn-danger">Sim, Excluir</button>
            <a asp-action="Index" class="btn btn-primary">Não, Cancelar</a>
        </div>
    </form>
</div>
