@model List<MedControl.ViewModels.DepartamentoViewModel>

<div class="container mt-4">
    <h2>Departamentos</h2>
    <p>
        <a asp-action="Criar" class="btn btn-success">Novo Departamento</a>
    </p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var departamento in Model)
            {
                <tr>
                    <td>@departamento.Id</td>
                    <td>@departamento.Nome</td>
                    <td>@departamento.Descricao</td>
                    <td>
                        <a asp-action="Detalhes" asp-route-id="@departamento.Id" class="btn btn-info">Detalhes</a>
                        <a asp-action="Editar" asp-route-id="@departamento.Id" class="btn btn-warning">Editar</a>
                        <a asp-action="Excluir" asp-route-id="@departamento.Id" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
